{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.alias }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <img src="{{ user.picture }}" class="avatar" alt="Avatar de {{ user.alias }}">
            </div>
            <div class="col-md-9">
                {% if user is same as (app.user) %}
                    <div class="mt-3">
                        <a href="{{ path('account_profile') }}" class="btn btn-primary mr-2 ml-2">Modifier mes informations</a>
                        <a href="{{ path('account_password') }}" class="btn btn-primary mr-2 ml-2">Modifier mon mot de passe</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
